algoritmo "DecrescenteDe1000"
var
    Contador, N: Inteiro
inicio
      Escreva ("Ate qual numero voce quer que eu conte?")
      Leia (N)
      Contador <- 0
      Enquanto (Contador <= N) faca
      Escreval (Contador)
      Contador <- Contador + 1
      FimEnquanto
      Escreval ("Terminei! :)")
fimalgoritmo
